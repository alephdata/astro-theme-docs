---
const { size = null, padded = false, className } = Astro.props;
---

<style>
  .Wrapper {
    width: 100%;
    margin-inline: auto;
    max-width: 96rem;
  }

  .Wrapper--padded {
    padding-inline: calc(3 / 4 * var(--space));
  }

  .Wrapper--small {
    max-width: 56rem;
  }

  .Wrapper--prose {
    max-width: 72ch;
  }
</style>

<div
  class:list={[
    'Wrapper',
    size && `Wrapper--${size}`,
    padded && 'Wrapper--padded',
    className,
  ]}
>
  <slot />
</div>
