---
const { size = null } = Astro.props;
---

<style>
  .Stack {
    --stack-size: var(--space);
  }

  .Stack > :global(* + *) {
    margin-block-start: var(--stack-size);
  }

  .Stack-lg {
    --stack-size: var(--space-lg);
  }

  .Stack-xl {
    --stack-size: var(--space-xl);
  }

  .Stack-sm {
    --stack-size: var(--space-sm);
  }

  .Stack-xs {
    --stack-size: var(--space-xs);
  }
</style>

<div class:list={['Stack', size && `Stack-${size}`]}>
  <slot />
</div>
