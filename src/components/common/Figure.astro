<style>
  .Figure__caption {
    margin-inline: auto;
    margin-block-start: var(--space-sm);
    font-size: var(--font-size-sm);
    color: var(--color-fg-muted);
  }
</style>

<figure class="Figure">
  <slot />
  {
    Object.keys(Astro.slots.render('caption')).length > 0 && (
      <figcaption class="Figure__caption">
        <slot name="caption" />
      </figcaption>
    )
  }
</figure>
